<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:hint="Enter name (e.g. Avocado)"
        android:id="@+id/etSearch_restaurants"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter locale (e.g. NYC)"
        android:id="@+id/etSearch_locale"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_below="@id/etSearch_restaurants"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSearch_locale"
        android:layout_centerHorizontal="true"
        android:text="Search"
        android:onClick="onSearchClick"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:id="@+id/btnSearch" />



</RelativeLayout>